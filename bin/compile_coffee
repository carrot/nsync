#!/usr/bin/env node

try {
  require('shelljs/global');
}
catch (e) {
  console.log('Error: shelljs not found. Try running npm install.');
  process.exit(1);
}

var cs = require('coffee-script');
var path = require('path');

console.log('Compiling CoffeeScript');

rm('-R', './lib');

var files = ls('-R', './src'), file, _in, _out;
for (var i = 0; i < files.length; i++) {
  file = files[i];
  if (file == 'version.coffee') continue; // written later
  if (file.match(/\.coffee$/)) {
  	_in = path.join('./src', file)
  	_out = path.join('./lib', file.replace(/\.coffee$/, '.js'));
  	console.log('  ' + _in + ' ->' + _out);
    cs.compile(cat(_in), {bare: true}).to(_out);
  } else {
    mkdir('-p', './lib/' + file);
  }
}

var version = JSON.parse(cat('package.json')).version;
('module.exports = "' + version + '";\n').to('./lib/version.js');
console.log('\nVersion: '+ version);
